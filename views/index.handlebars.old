<h1>Burgers!</h1>

<h2>Burgers available</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{!-- {{this.burger_name}} --}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">{{this.burger_name}}</button>
        </form>

        
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        {{!-- <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="burger" value="false">
          <button type="submit">Eaten!</button>
        </form> --}}

       
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="Burger_name">
  </div>



  <button type="submit">Add Burger</button>
</form>